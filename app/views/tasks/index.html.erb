<center><h1>Tasks</h1></center>

<center><%= link_to "Create new task", new_task_path, class: 'btn btn-primary' %></center>
<p></p>
<div class="row">
  <% @tasks.each do |task| %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <p class="card-header"><%= task.title %></p>
          <p class="card-text"><%= task.description %></p>
          <p><%= link_to "Current status: #{task.status}", toggle_status_task_path(task), method: :post, class: 'btn btn-link' %></p>
          <%= link_to "Edit", edit_task_path(task), class: 'btn btn-secondary'%>
          <%= link_to "Delete Task", task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' %>
        </div>
      </div>
     </div>         
  <% end %>
</div>   
